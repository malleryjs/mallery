{
  "name": "mallery",
  "version": "0.0.1",
  "description": "Static documentation site generator",
  "main": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:dist && npm run build:uglify",
    "build:dist": "npm run build:src && npm run build:rollup",
    "dub": "npm run cleanup:dist && ",
    "build:rollup": "./node_modules/.bin/rollup -c build/rollup.config.js",
    "watch": "./node_modules/.bin/rollup -w -c build/rollup.config.js",
    "build:src": "npm run prettier",
    "build:uglify": "node ./build/uglify.js",
    "prettier": "npm run prettier:src && npm run prettier:build",
    "prettier:src": "prettier --write \"src/**/*.js\"",
    "prettier:build": "prettier --write \"build/**/*.js\"",
    "cleanup:dist": "mkdir -p dist && rm -f ./dist/*",
    "serve": "./node_modules/.bin/http-server ./site"
  },
  "bin": {
    "mallery": "./cli.js"
  },
  "author": "Katja Lutz",
  "license": "MIT",
  "dependencies": {
    "fs-extra": "^4.0.1",
    "handlebars": "^4.0.10",
    "lodash.merge": "^4.6.0",
    "remark": "^7.0.1",
    "remark-autolink-headings": "^5.0.0",
    "remark-gemoji-to-emoji": "^1.1.0",
    "remark-github": "^7.0.1",
    "remark-highlight.js": "^5.0.0",
    "remark-html": "^6.0.1",
    "remark-slug": "^4.2.3",
    "remark-toc": "^4.0.1",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "whatwg-fetch": "^2.0.3",
    "http-server": "^0.10.0",
    "alo": "^2.8.3",
    "bootstrap": "^4.0.0-alpha.6",
    "cxs": "^5.1.0",
    "icono": "^1.3.1",
    "prettier": "^1.4.4",
    "redom": "^3.2.1",
    "rollup": "^0.43.0",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-css-only": "^0.2.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-includepaths": "^0.2.2",
    "rollup-watch": "^4.0.0",
    "uglify-js": "^3.0.16"
  }
}
